}

music() {
LOCK_FILE_SONG="$HOME/.cache/eww-song.lock"
EWW_BIN="/usr/sbin/eww"

run() {
    ${EWW_BIN} -c $HOME/.config/eww/bar open music_win 
}

# Open widgets
if [[ ! -f "$LOCK_FILE_SONG" ]]; then
    ${EWW_BIN} -c $HOME/.config/eww/bar close system system_b1 system_info system_info_b1 calendar calendar_b1 audio_ctl audio_ctl_b1
    touch "$LOCK_FILE_SONG"
    run && echo "ok good!"
else
    ${EWW_BIN} -c $HOME/.config/eww/bar close music_win
    rm "$LOCK_FILE_SONG" && echo "closed"
fi
}
music_b1() {
LOCK_FILE_SONG="$HOME/.cache/eww-song.lock"
EWW_BIN="/usr/sbin/eww"

run() {
    ${EWW_BIN} -c $HOME/.config/eww/bar open music_win_b1
