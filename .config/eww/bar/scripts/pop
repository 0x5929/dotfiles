}



audio() {
LOCK_FILE_AUDIO="$HOME/.cache/eww-audio.lock"
EWW_BIN="/usr/sbin/eww"

run() {
    ${EWW_BIN} -c $HOME/.config/eww/bar open audio_ctl 
}

# Open widgets
if [[ ! -f "$LOCK_FILE_AUDIO" ]]; then
    ${EWW_BIN} -c $HOME/.config/eww/bar close system system_b1 calendar calendar_b1 music_win music_win_b1 system_info system_info_b1
    touch "$LOCK_FILE_AUDIO"
    run && echo "ok good!"
else
    ${EWW_BIN} -c $HOME/.config/eww/bar close audio_ctl
    rm "$LOCK_FILE_AUDIO" && echo "closed"
fi

pavucontrol
}

audio_b1() {
LOCK_FILE_AUDIO="$HOME/.cache/eww-audio.lock"
EWW_BIN="/usr/sbin/eww"

run() {
    ${EWW_BIN} -c $HOME/.config/eww/bar open audio_ctl_b1
}

# Open widgets
if [[ ! -f "$LOCK_FILE_AUDIO" ]]; then
    ${EWW_BIN} -c $HOME/.config/eww/bar close system system_b1 calendar calendar_b1 music_win music_win_b1 system_info system_info_b1
    touch "$LOCK_FILE_AUDIO"
    run && echo "ok good!"
else
    ${EWW_BIN} -c $HOME/.config/eww/bar close audio_ctl_b1
    rm "$LOCK_FILE_AUDIO" && echo "closed"
fi
}

if [ "$1" = "calendar" ]; then
calendar
elif [ "$1" = "calendar_b1" ]; then
calendar_b1
elif [ "$1" = "system" ]; then
system
elif [ "$1" = "system_b1" ]; then
system_b1
elif [ "$1" = "system_info" ]; then
system_info
elif [ "$1" = "system_info_b1" ]; then
system_info_b1
elif [ "$1" = "music" ]; then
music
elif [ "$1" = "music_b1" ]; then
music_b1
elif [ "$1" = "audio" ]; then
audio
elif [ "$1" = "audio_b1" ]; then
audio_b1
fi
