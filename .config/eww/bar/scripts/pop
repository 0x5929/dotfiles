    ${EWW_BIN} -c $HOME/.config/eww/bar close calendar calendar_b1 music_win music_win_b1 audio_ctl audio_ctl_b1 system system_b1
    touch "$LOCK_FILE_MEM"
    run && echo "ok good!"
else
    ${EWW_BIN} -c $HOME/.config/eww/bar close system_info_b1 
