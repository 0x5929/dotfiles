#!/bin/bash

calendar() {
LOCK_FILE="$HOME/.cache/eww-calendar.lock"
EWW_BIN="/usr/bin/eww"

run() {
    ${EWW_BIN} -c $HOME/.config/eww/bar open calendar
}

# Open widgets
if [[ ! -f "$LOCK_FILE" ]]; then
    ${EWW_BIN} -c $HOME/.config/eww/bar close system system_b1 music_win music_win_b1 audio_ctl audio_ctl_b1 system_info system_info_b1
    touch "$LOCK_FILE"
    run && echo "ok good!"
else
    ${EWW_BIN} -c $HOME/.config/eww/bar close calendar
    rm "$LOCK_FILE" && echo "closed"
fi
}

calendar_b1() {
LOCK_FILE="$HOME/.cache/eww-calendar.lock"
EWW_BIN="/usr/sbin/eww"

run() {
    ${EWW_BIN} -c $HOME/.config/eww/bar open calendar_b1
}

# Open widgets
if [[ ! -f "$LOCK_FILE" ]]; then
    ${EWW_BIN} -c $HOME/.config/eww/bar close system system_b1 music_win music_win_b1 audio_ctl audio_ctl_b1 system_info system_info_b1
    touch "$LOCK_FILE"
    run && echo "ok good!"
else
    ${EWW_BIN} -c $HOME/.config/eww/bar close calendar_b1
    rm "$LOCK_FILE" && echo "closed"
fi
}


system() {
LOCK_FILE_MEM="$HOME/.cache/eww-system.lock"
EWW_BIN="/usr/sbin/eww"

run() {
    ${EWW_BIN} -c $HOME/.config/eww/bar open system 
}

# Open widgets
if [[ ! -f "$LOCK_FILE_MEM" ]]; then
    ${EWW_BIN} -c $HOME/.config/eww/bar close calendar calendar_b1 music_win music_win_b1 audio_ctl audio_ctl_b1  system_info system_info_b1
    touch "$LOCK_FILE_MEM"
    run && echo "ok good!"
else
    ${EWW_BIN} -c $HOME/.config/eww/bar close system 
    rm "$LOCK_FILE_MEM" && echo "closed"
fi
}

system_b1() {
LOCK_FILE_MEM="$HOME/.cache/eww-system.lock"
EWW_BIN="/usr/sbin/eww"

run() {
  ${EWW_BIN} -c $HOME/.config/eww/bar open system_b1
}

# Open widgets
if [[ ! -f "$LOCK_FILE_MEM" ]]; then
    ${EWW_BIN} -c $HOME/.config/eww/bar close calendar calendar_b1 music_win music_win_b1 audio_ctl audio_ctl_b1  system_info system_info_b1
    touch "$LOCK_FILE_MEM"
    run && echo "ok good!"
else
    ${EWW_BIN} -c $HOME/.config/eww/bar close system_b1
    rm "$LOCK_FILE_MEM" && echo "closed"
fi
}
